<h3>{{viewTitle}}</h3>

<form action="/employe" method="POST" autocomplete="off">
<input type="hidden" name="_id" value="{{employe._id}}">
    <div class="form-group">
        <label>Full Name</label>
        <input type="text" class="form-control" name="fullName" placeholder="Full Name" value="{{employe.fullName}}">
        <div class="text-danger">
            {{employe.fullNameError}}
        </div>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email"value="{{employe.email}}">
        <div class="text-danger">
            {{employe.emailError}}
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
        <label>Mobile</label>
        <input type="text" class="form-control" name="mobile" placeholder="Mobile"value="{{employe.mobile}}">
        </div>
    </div>
    <div class="form-group col-md-6">
        <label>City</label>
        <input type="text" class="form-control" name="city" placeholder="City" value="{{employe.city}}">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info" href="/employe/addORedit"><i class="fa fa-database"></i>Submit</button>
        <a class="btn btn-secondary" href="/employe/list"><i class="fa fa-list-alt"></i>View All</a>
        </div>
</form>