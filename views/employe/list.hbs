<h3><a class="btn btn-secondary" href="/employe"><i class="fa fa-plus"></i>Create New</a>Employe List</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>City</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.fullName}}</td>
            <td>{{this.email}}</td>
            <td>{{this.mobile}}</td>
            <td>{{this.city}}</td>
            <td>
                <a href="/employe/{{this._id}}"><i class="fa fa-pencile fa-lg" aria-hidden="true"></i></a>
                <a href="/employe/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>

            </td>

        </tr>
        {{/each}}
    </tbody>
</table>